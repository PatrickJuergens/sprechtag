{% extends 'backend/base.html.twig' %}

{% block page_title %}
    <div class="page-title">
        <div class="title_left">
            <h3>Zeitfenster <small>{{ time_frame.name }}</small></h3>
        </div>
        <div class="title_right">
            <div class="col-md-5 col-sm-5 text-right align-bottom form-group pull-right">
                <a class="btn btn-secondary" href="{{ path('app_time_frame_index') }}">Zurück zur Übersicht</a>
                <a class="btn btn-secondary"  href="{{ path('app_time_frame_edit', {'id': time_frame.id}) }}">Bearbeiten</a>
                {{ include('backend/time_frame/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="col-md-12 col-sm-12 ">
        <div class="x_panel tile">
            <div class="x_content">
                <table class="table">
                    <tbody>
                    <tr>
                        <th>ID</th>
                        <td>{{ time_frame.id }}</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>{{ time_frame.name }}</td>
                    </tr>
                    <tr>
                        <th>Erstellt von</th>
                        <td>{{ time_frame.createdBy }}</td>
                    </tr>
                    <tr>
                        <th>Bearbeitet von</th>
                        <td>{{ time_frame.updatedBy }}</td>
                    </tr>
                    <tr>
                        <th>Erstellt am</th>
                        <td>{{ time_frame.createdAt ? time_frame.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Bearbeitet am</th>
                        <td>{{ time_frame.updatedAt ? time_frame.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}