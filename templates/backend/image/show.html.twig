{% extends 'backend/base.html.twig' %}

{% block page_title %}
    <div class="page-title">
        <div class="title_left">
            <h3>Bilder <small>{{ image.name }}</small></h3>
        </div>
        <div class="title_right">
            <div class="col-md-5 col-sm-5 text-right align-bottom form-group pull-right">
                <a class="btn btn-secondary" href="{{ path('app_image_index') }}">Zurück zur Übersicht</a>
                <a class="btn btn-secondary"  href="{{ path('app_image_edit', {'id': image.id}) }}">Bearbeiten</a>
                {{ include('backend/image/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="col-md-12 col-sm-12 ">
        <div class="x_panel tile">
            <div class="x_content">
                <table class="table">
                    <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ image.id }}</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>{{ image.name }}</td>
                    </tr>
                    <tr>
                        <th>FileContent</th>
                        <td><img alt="{{ image.name }}" src="{{ path('app_image', {'id': image.id}) }}"></td>
                    </tr>
                    <tr>
                        <th>MimeType</th>
                        <td>{{ image.mimeType }}</td>
                    </tr>
                    </tbody>
                </table>

            </div>
        </div>
    </div>
{% endblock %}