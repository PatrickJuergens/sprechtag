{% extends 'frontend/base.html.twig' %}

{% block content %}
    <form class="mx-1 mx-md-4" action="{{ path('app_select_time_frame') }}" method="get">

        <p>Sie wünschen einen Termin für den Eltern- und Ausbildersprechtag, dann wählen sie eine Lehrkraft aus, mit der Sie einen Termin vereinbaren wollen:</p>

        <div class="d-flex flex-row align-items-center mb-4">
            <div class="form-outline flex-fill mb-0">
                {{ form_row(form.teacher) }}
            </div>
        </div>

        <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
            <button type="submit" class="btn btn-primary btn-lg">Weiter</button>
        </div>

    </form>
{% endblock %}

{% block css_additional %}
    <!-- select2 -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/css/select2.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css" />
{% endblock %}
{% block javascript_additional %}
    <script src="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/js/select2.full.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/i18n/de.js"></script>
    <script src="{{ asset('bundles/tetranzselect2entity/js/select2entity.js') }}"></script>
{% endblock %}